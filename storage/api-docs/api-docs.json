                            "prix_vente": {
                                "description": "Prix de vente",
                                "type": "number",
                                "format": "float"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "PaiementResource": {
                "title": "PaiementResource",
                "description": "Ressource Paiement",
                "properties": {
                    "id": {
                        "description": "ID du paiement",
                        "type": "integer"
                    },
                    "montant": {
                        "description": "Montant du paiement",
