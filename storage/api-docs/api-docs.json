{
    "openapi": "3.0.0",
    "info": {
        "title": "API Dette Management",
        "description": "Documentation de l'API pour la gestion des dettes.",
        "contact": {
            "email": "support@votreprojet.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "Serveur local"
        }
    ],
    "paths": {
        "/api/users": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Lister tous les utilisateurs",
                "description": "Retourne une liste de tous les utilisateurs.",
                "operationId": "getUsersList",
                "responses": {
                    "200": {
                        "description": "Liste des utilisateurs",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/User"
                                    }
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Créer un nouvel utilisateur",
                "description": "Crée un utilisateur avec un rôle admin ou vendeur",
                "operationId": "registerUser",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "prenom",
                                    "login",
                                    "email",
                                    "password",
                                    "role"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "John Doe"
                                    },
                                    "prenom": {
                                        "type": "string",
                                        "example": "John"
                                    },
                                    "login": {
                                        "type": "string",
                                        "example": "johndoe"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "john.doe@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "password"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "password"
                                    },
                                    "role": {
                                        "type": "string",
                                        "enum": [
                                            "admin",
                                            "vendeur"
                                        ],
                                        "example": "admin"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Utilisateur créé avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error"
                    }
                }
            }
        },
        "/api/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Connecter un utilisateur",
                "description": "Connecte un utilisateur et retourne un token d'accès",
                "operationId": "loginUser",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "login",
                                    "password"
                                ],
                                "properties": {
                                    "login": {
                                        "type": "string",
                                        "example": "johndoe"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Connexion réussie",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "user": {
                                            "$ref": "#/components/schemas/User"
                                        },
                                        "access_token": {
                                            "type": "string",
                                            "example": "token"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error"
                    }
                }
            }
        },
        "/api/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Déconnecter un utilisateur",
                "description": "Déconnecte l'utilisateur en supprimant son token d'accès",
                "operationId": "logoutUser",
                "responses": {
                    "200": {
                        "description": "Déconnexion réussie",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Logged out successfully"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/clients/create-account": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Créer un compte pour un client existant",
                "description": "Crée un compte utilisateur pour un client existant",
                "operationId": "createClientAccount",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "client_id",
                                    "password"
                                ],
                                "properties": {
                                    "client_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "password"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Compte client créé avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "user": {
                                            "$ref": "#/components/schemas/User"
                                        },
                                        "access_token": {
                                            "type": "string",
                                            "example": "token"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/clients": {
            "get": {
                "tags": [
                    "Clients"
                ],
                "summary": "Lister tous les clients",
                "description": "Retourne une liste de tous les clients.",
                "operationId": "getClientsList",
                "responses": {
                    "200": {
                        "description": "Liste des clients",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Client"
                                    }
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Clients"
                ],
                "summary": "Créer un nouveau client",
                "description": "Ajoute un nouveau client dans la base de données",
                "operationId": "storeClient",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "nom",
                                    "email",
                                    "telephone"
                                ],
                                "properties": {
                                    "nom": {
                                        "type": "string",
                                        "example": "Jane Doe"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "jane.doe@example.com"
                                    },
                                    "telephone": {
                                        "type": "string",
                                        "example": "+123456789"
                                    },
                                    "adresse": {
                                        "type": "string",
                                        "example": "123 Main St"
                                    },
                                    "surnom": {
                                        "type": "string",
                                        "example": "JD"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Client créé avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Client"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/clients/{id}": {
            "get": {
                "tags": [
                    "Clients"
                ],
                "summary": "Voir les détails d'un client",
                "description": "Retourne les détails d'un client spécifique.",
                "operationId": "getClientById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID du client",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Détails du client",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Client"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Client not found"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/v1/dettes": {
            "post": {
                "tags": [
                    "Dettes"
                ],
                "summary": "Enregistrer une nouvelle dette",
                "operationId": "2e1cb2653ebc3f48df1c49dada9dfc9f",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "montant",
                                    "clientId",
                                    "articles"
                                ],
                                "properties": {
                                    "montant": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 1000000
                                    },
                                    "clientId": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "articles": {
                                        "type": "array",
                                        "items": {
                                            "properties": {
                                                "articleId": {
                                                    "type": "integer",
                                                    "example": 3
                                                },
                                                "qteVente": {
                                                    "type": "integer",
                                                    "example": 500
                                                },
                                                "prixVente": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "example": 100
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "paiement": {
                                        "properties": {
                                            "montant": {
                                                "type": "number",
                                                "format": "float",
                                                "example": 500000
                                            }
                                        },
                                        "type": "object"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Dette enregistrée avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "integer",
                                            "example": 201
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/DetteResource"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Dette enregistrée avec succès"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Erreur",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "integer",
                                            "example": 422
                                        },
                                        "data": {
                                            "type": "null",
                                            "example": null
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Le montant du paiement dépasse le montant de la dette."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erreur Serveur",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "integer",
                                            "example": 500
                                        },
                                        "data": {
                                            "type": "null",
                                            "example": null
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Une erreur est survenue lors de l'enregistrement de la dette."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "DetteResource": {
                "title": "DetteResource",
                "description": "Ressource Dette",
                "properties": {
                    "id": {
                        "description": "ID de la dette",
                        "type": "integer"
                    },
                    "montant": {
                        "description": "Montant de la dette",
                        "type": "number",
                        "format": "float"
                    },
                    "client": {
                        "$ref": "#/components/schemas/ClientResource"
                    },
                    "articles": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/ArticleResource"
                        }
                    },
                    "paiements": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/PaiementResource"
                        }
                    },
                    "created_at": {
                        "description": "Date de création",
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "description": "Date de mise à jour",
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "ClientResource": {
                "title": "ClientResource",
                "description": "Ressource Client",
                "properties": {
                    "id": {
                        "description": "ID du client",
                        "type": "integer"
                    },
                    "nom": {
                        "description": "Nom du client",
                        "type": "string"
                    },
                    "email": {
                        "description": "Email du client",
                        "type": "string",
                        "format": "email"
                    },
                    "telephone": {
                        "description": "Numéro de téléphone du client",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "ArticleResource": {
                "title": "ArticleResource",
                "description": "Ressource Article",
                "properties": {
                    "id": {
                        "description": "ID de l'article",
                        "type": "integer"
                    },
                    "nom": {
                        "description": "Nom de l'article",
                        "type": "string"
                    },
                    "qte_stock": {
                        "description": "Quantité en stock",
                        "type": "integer"
                    },
                    "prix_vente": {
                        "description": "Prix de vente",
                        "type": "number",
                        "format": "float"
                    },
                    "pivot": {
                        "description": "Données pivot",
                        "properties": {
                            "qte_vente": {
                                "description": "Quantité vendue",
                                "type": "integer"
                            },
                            "prix_vente": {
                                "description": "Prix de vente",
                                "type": "number",
                                "format": "float"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "PaiementResource": {
                "title": "PaiementResource",
                "description": "Ressource Paiement",
                "properties": {
                    "id": {
                        "description": "ID du paiement",
                        "type": "integer"
                    },
                    "montant": {
                        "description": "Montant du paiement",
                        "type": "number",
                        "format": "float"
                    },
                    "created_at": {
                        "description": "Date de création",
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "User": {
                "required": [
                    "id",
                    "name",
                    "prenom",
                    "login",
                    "email"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "John Doe"
                    },
                    "prenom": {
                        "type": "string",
                        "example": "John"
                    },
                    "login": {
                        "type": "string",
                        "example": "johndoe"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "john.doe@example.com"
                    },
                    "etat": {
                        "type": "string",
                        "example": "actif"
                    }
                },
                "type": "object"
            },
            "Client": {
                "required": [
                    "id",
                    "nom",
                    "email",
                    "telephone"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "nom": {
                        "type": "string",
                        "example": "Jane Doe"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "jane.doe@example.com"
                    },
                    "telephone": {
                        "type": "string",
                        "example": "+123456789"
                    },
                    "adresse": {
                        "type": "string",
                        "example": "123 Main St"
                    },
                    "surnom": {
                        "type": "string",
                        "example": "JD"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "passport": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            },
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "tags": [
        {
            "name": "Auth",
            "description": "Endpoints liés à l'authentification et à la gestion des utilisateurs"
        },
        {
            "name": "Clients",
            "description": "Endpoints liés à la gestion des clients"
        },
        {
            "name": "Dettes",
            "description": "Gestion des dettes"
        }
    ],
    "security": [
        {
            "bearerAuth": []
        }
    ]
}